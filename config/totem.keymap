#include <dt-bindings/zmk/keys.h>

/*
 * Baseline minimal keymap for stable split bring-up.
 *
 * Disabled in this baseline:
 * - combos
 * - custom hold-tap behaviors
 * - macros / conditional layers / bluetooth management layer
 * - extra layers beyond BASE + LOWER
 *
 * Re-enable safely (one step at a time):
 * 1) Confirm this 2-layer keymap builds and runs on both halves.
 * 2) Add one feature (e.g. hold-tap) and rebuild.
 * 3) Add combos/macros only after step 2 is stable.
 * 4) Add extra layers last, verifying after each change.
 */

/ {
    keymap {
        compatible = "zmk,keymap";

        base_layer {
            bindings = <
                &kp Q      &kp W      &kp E      &kp R      &kp T      &kp Y      &kp U      &kp I       &kp O        &kp P
                &kp A      &kp S      &kp D      &kp F      &kp G      &kp H      &kp J      &kp K       &kp L        &kp SQT
                &kp LSHFT  &kp Z      &kp X      &kp C      &kp V      &kp B      &kp N      &kp M       &kp COMMA    &kp DOT      &kp FSLH     &kp RSHFT
                                           &kp ESC  &kp TAB  &mo 1  &kp SPACE  &kp ENTER  &kp BSPC
            >;
        };

        lower_layer {
            bindings = <
                &kp GRAVE  &kp N1     &kp N2     &kp N3     &kp N4     &kp N5     &kp N6     &kp N7      &kp N8       &kp N9
                &kp TAB    &kp LEFT   &kp DOWN   &kp UP     &kp RIGHT  &kp MINUS  &kp EQUAL  &kp LBKT    &kp RBKT     &kp BSLH
                &trans     &kp F1     &kp F2     &kp F3     &kp F4     &kp F5     &kp F6     &kp F7      &kp F8       &kp F9       &kp F10      &trans
                                         &trans   &trans     &trans     &trans     &kp DEL    &trans
            >;
        };
    };
};
